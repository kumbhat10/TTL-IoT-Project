<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel1"
            type="com.ttl.robotcontrol.FullscreenViewModel" />
        <variable
            name="recyclerViewAdapter"
            type="com.ttl.robotcontrol.RobotStatsGridAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/mainLayout"
        tools:context = ".FullscreenActivity">

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/gridControlStats"-->
<!--            android:layout_width="0dp"-->
<!--            app:layout_constraintEnd_toStartOf="@id/mapView"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:visibility="gone"-->
<!--            android:layout_marginEnd="@dimen/_5sdp"-->
<!--            android:layout_marginStart="@dimen/_5sdp"-->
<!--            android:layout_marginTop="@dimen/_5sdp"-->
<!--            android:background="@drawable/shine_user_rank"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
