                android:id="@+id/gpsTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/gpsLastSeen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_updated_on"
                        android:textColor="@color/font_yellow"
                        android:textSize="@dimen/gpsText" />

                    <TextView
                        android:id="@+id/gpsLastSeenValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@{viewModel1.gpsLastSeen}"
                        android:textColor="@color/font_grey_settings"
                        android:textSize="@dimen/gpsText" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/gpsLat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gpsLat"
                        android:textColor="@color/font_yellow"
                        android:textSize="@dimen/gpsText" />

                    <TextView
                        android:id="@+id/gpsLatValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@{viewModel1.gpsLat}"
                        android:textColor="@color/font_grey_settings"
                        android:textSize="@dimen/gpsText" />
                </TableRow>

                <TableRow
