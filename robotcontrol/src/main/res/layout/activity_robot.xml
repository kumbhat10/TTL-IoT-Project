        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:background="#CB16EC"
            android:layout_marginStart="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{() -> viewModel1.defaultPosition()}"
            android:text="@string/defaultPos"
            android:textSize="@dimen/_7ssp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buzz"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/gridControlStats" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buzz"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#F63174"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{() -> viewModel1.buzzOnce()}"
            android:text="@string/button3"
            android:textSize="@dimen/_7ssp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/startPosition"
            app:layout_constraintStart_toEndOf="@id/startPosition"
            app:layout_constraintEnd_toStartOf="@+id/fakeCrash"
            app:layout_constraintTop_toTopOf="@id/startPosition" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fakeCrash"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#FF9800"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{() -> viewModel1.fakeCrash()}"
            android:text="@string/button4"
            android:textSize="@dimen/_7ssp"
            android:textColor="@color/black"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/buzz"
            app:layout_constraintStart_toEndOf="@id/buzz"
            app:layout_constraintEnd_toStartOf="@+id/buzzer"
            app:layout_constraintTop_toTopOf="@id/buzz" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/buzzer"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_43sdp"
            android:checked="@={viewModel1.buzzerEnable}"
            android:soundEffectsEnabled="true"
            android:textOff="@string/buz_noff"
            android:textOn="@string/buz_non"
            android:textSize="@dimen/_7ssp"
            android:theme="@style/ToggleButton.CustomTheme"
            app:layout_constraintBottom_toBottomOf="@+id/startPosition"
            app:layout_constraintEnd_toStartOf="@+id/buttonJoystick"
            app:layout_constraintStart_toEndOf="@+id/fakeCrash"
            app:layout_constraintTop_toTopOf="@id/startPosition" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/buttonJoystick"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:checked="@={viewModel1.joystickEnable}"
            android:textColorHighlight="#2D531D"
            android:textColorLink="#00FF21"
            android:visibility="gone"
            android:textOff="@string/joystick_noff"
            android:textOn="@string/joystick_non"
            android:textSize="@dimen/_7ssp"
            android:theme="@style/ToggleButton.CustomTheme"
            app:layout_constraintBottom_toBottomOf="@+id/startPosition"
            app:layout_constraintStart_toEndOf="@+id/buzzer"
            app:layout_constraintEnd_toStartOf="@id/mapViewRobot"
            app:layout_constraintTop_toTopOf="@id/startPosition" />

        <com.google.android.gms.maps.MapView 
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mapViewRobot"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            app:layout_constraintBottom_toTopOf="@id/gpsCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            map:cameraBearing="0"
            map:cameraTilt="0"
            map:cameraZoom="14"
            map:layout_constraintStart_toEndOf="@+id/gridControlStats"
            map:mapType="normal"
            map:uiCompass="true"
            map:uiRotateGestures="true"
            map:uiScrollGestures="true"
            map:uiTiltGestures="true"
            map:uiZoomControls="true"
            map:uiZoomGestures="true" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gpsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/mapViewRobot">

